{% extends 'base.html.jinja2' %}

{% block header %}
  <h1>{% block title %}Songs{% endblock %}</h1>
  {% if g.user %}
    <a class="action" href="{{ url_for('song_book.create') }}">New</a>
  {% endif %}
{% endblock %}

{% block content %}
  {% for song in songs %}
    <article class="post">
      <header>
        <div>
          <h1>{{ song['title'] }}</h1>
	  <div class="about">by {{ song['author'] }}</div> 
          <div class="about">Uploaded by: {{ song['username'] }} on {{ song['created'].strftime('%Y-%m-%d') }}</div>
        </div>
        {% if g.user['id'] == song['creator_id'] %}
          <a class="action" href="{{ url_for('song_book.update', id=song['id']) }}">Edit</a>
        {% endif %}
      </header>
      <p class="body">{{ song['body'] }}</p>
    </article>
    {% if not loop.last %}
      <hr>
    {% endif %}
  {% endfor %}
{% endblock %}
